{
  "definition": {
    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
    "actions": {
      "XML_Validation": {
        "type": "XmlValidation",
        "inputs": {
          "content": "@triggerBody()",
          "schema": {
            "source": "LogicApp",
            "name": "EbayPurchaseOrder.xsd"
          }
        },
        "runAfter": {}
      },
      "Transform_and_save": {
        "type": "Scope",
        "actions": {
          "Transform_to_PurchaseOrder": {
            "type": "Xslt",
            "inputs": {
              "content": "@triggerBody()",
              "map": {
                "source": "LogicApp",
                "name": "EbayPO_to_PurchaseOrder.xslt"
              }
            }
          },
          "Send_to_service_bus": {
            "type": "ServiceProvider",
            "inputs": {
              "parameters": {
                "entityName": "@parameters('received-orders-topic-name')",
                "message": {
                  "contentData": "@body('Transform_to_PurchaseOrder')",
                  "contentType": "application/xml",
                  "userProperties": {
                    "OrderSource": "@{xpath(body('Transform_to_PurchaseOrder'), '/PurchaseOrder/OrderSource/text()')?[0]}"
                  }
                }
              },
              "serviceProviderConfiguration": {
                "connectionName": "serviceBus-1",
                "operationId": "sendMessage",
                "serviceProviderId": "/serviceProviders/serviceBus"
              }
            },
            "runAfter": {
              "Set_OrderId": [
                "SUCCEEDED"
              ]
            }
          },
          "Set_OrderId": {
            "type": "SetVariable",
            "inputs": {
              "name": "orderId",
              "value": "@xpath(body('Transform_to_PurchaseOrder'), '/PurchaseOrder/OrderID/text()')?[0]"
            },
            "runAfter": {
              "Transform_to_PurchaseOrder": [
                "SUCCEEDED"
              ]
            }
          }
        },
        "runAfter": {
          "Variable_OrderId": [
            "SUCCEEDED"
          ]
        }
      },
      "Send_order_received_notification": {
        "type": "ServiceProvider",
        "inputs": {
          "parameters": {
            "entityName": "ebayorderreceivenotification",
            "message": {
              "contentData": "@triggerBody()",
              "contentType": "application/xml",
              "userProperties": {
                "eBayOrderId": "@{xpath(triggerBody(), '/eBayOrder/eBayOrderID/text()')?[0]}",
                "CustomerEmail": "@{xpath(triggerBody(), '/eBayOrder/Buyer/ContactEmail/text()')?[0]}"
              }
            }
          },
          "serviceProviderConfiguration": {
            "connectionName": "serviceBus-1",
            "operationId": "sendMessage",
            "serviceProviderId": "/serviceProviders/serviceBus"
          }
        },
        "runAfter": {
          "XML_Validation": [
            "SUCCEEDED"
          ]
        }
      },
      "Response_OK": {
        "type": "Response",
        "kind": "Http",
        "inputs": {
          "statusCode": 200,
          "body": "<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<Response>\n    <PurchaseOrderId>@{variables('orderId')}</PurchaseOrderId>\n</Response>"
        },
        "runAfter": {
          "Transform_and_save": [
            "SUCCEEDED"
          ]
        }
      },
      "Bad_Request": {
        "type": "Response",
        "kind": "Http",
        "inputs": {
          "statusCode": 400
        },
        "runAfter": {
          "XML_Validation": [
            "FAILED"
          ]
        }
      },
      "Server_Error": {
        "type": "Response",
        "kind": "Http",
        "inputs": {
          "statusCode": 500
        },
        "runAfter": {
          "Transform_and_save": [
            "FAILED"
          ]
        }
      },
      "Variable_OrderId": {
        "type": "InitializeVariable",
        "inputs": {
          "variables": [
            {
              "name": "orderId",
              "type": "string"
            }
          ]
        },
        "runAfter": {
          "Send_order_received_notification": [
            "SUCCEEDED"
          ]
        }
      }
    },
    "contentVersion": "1.0.0.0",
    "outputs": {},
    "triggers": {
      "Http_POST_EbayOrder": {
        "type": "Request",
        "kind": "Http",
        "inputs": {
          "method": "POST"
        }
      }
    }
  },
  "kind": "Stateful"
}